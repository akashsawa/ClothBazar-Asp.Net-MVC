
@model List<Product>
@{
    ViewBag.Title = "ProductsTable";
}

<h2>Products Table</h2>
<div>
    <form method="post">
        <input id="searchtxt" type="text" name="Search" />
        <button id="searchbtn" type="button">SEARCH</button>
    </form>
    <button type="button" id="newbtn">NEW</button>
</div>

<div>
    <table>
        <thead>
            <tr>
                <td>Product name</td>
                <td>Category</td>
                <td>Price</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td></td>
                    <td>@product.Price</td>

                    <td>
                        <button class="editbtn" data-id="@product.Id">EDIT</button>
                        <button class="deletebtn" data-id="@product.Id">DELETE</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    /*const { get } = require("jquery");*/

    //using jquery
    $("#searchbtn").click(function () {
        //alert("click");
        var searchtxt = $("#searchtxt").val();//we have to send this value to server function.
        //alert(searchtxt);

        $.ajax({
            type: 'GET',
            url: '/Product/ProductsTable',
            data: {
                search: searchtxt
            }
        }).done(function (response) {
            //alert('success');
            //alert(response);
            $("#tableContainer").html(response);
        }).fail(function (XMLHttprequest, textStatus, errorThrown) {
            alert('fail');
        })
    });

    $("#newbtn").click(function () {

        $.ajax({
            type: 'GET',
            url: '/Product/Create',

        }).done(function (response) {
            //alert('success');
            //alert(response);
            $("#actionContainer").html(response);
        }).fail(function (XMLHttprequest, textStatus, errorThrown) {
            alert('fail');
        })
    });

    $(".editbtn").click(function () {
        //debugger; //put this ,browser will stop here for debugging
        $.ajax({
            type: 'GET',
            url: '/Product/Edit',
            data: {
                Id: $(this).attr("data-id")
            }
        }).done(function (response) {
            //alert('success');
            //alert(response);
            $("#actionContainer").html(response);
        }).fail(function (XMLHttprequest, textStatus, errorThrown) {
            alert('fail');
        })
    });

    $(".deletebtn").click(function () {
        //debugger; //put this ,browser will stop here for debugging
        var confirmDelete = confirm("Are you sure you want to delete this product ?");
        if (confirmDelete) {
            $.ajax({
                type: 'POST',
                url: '/Product/Delete',
                data: {
                    Id: $(this).attr("data-id")
                }
            }).done(function (response) {
                //alert('success');
                //alert(response);
                $("#tableContainer").html(response);
            }).fail(function (XMLHttprequest, textStatus, errorThrown) {
                alert('fail');
            })
        }

    });
</script>

